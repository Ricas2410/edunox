# Production Environment Variables for EduBridge Ghana
# Copy this file to .env and update the values for your production environment

# Core Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-with-at-least-50-characters-and-special-symbols-123456789
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/edubridge_db

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=EduBridge Ghana <your-email@gmail.com>

# Security Settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Static Files (Optional - for CDN)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Cache Configuration (Optional - for Redis)
REDIS_URL=redis://localhost:6379/1

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Social Authentication (Optional)
GOOGLE_OAUTH2_KEY=your-google-oauth-key
GOOGLE_OAUTH2_SECRET=your-google-oauth-secret

# Payment Integration (Optional)
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# Site Configuration
SITE_NAME=EduBridge Ghana
SITE_DOMAIN=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Performance Settings
CONN_MAX_AGE=600
CONN_HEALTH_CHECKS=True
