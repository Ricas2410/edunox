# EduBridge Ghana Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-super-secret-key-here

# Debug mode (NEVER set to True in production)
DEBUG=False

# Site configuration
SITE_NAME=EduLink GH
SITE_URL=https://edunox.pythonanywhere.com
ALLOWED_HOSTS=localhost,127.0.0.1,edunox.pythonanywhere.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (for advanced deployments)
# POSTGRES_DB=edubridge
# POSTGRES_USER=edubridge
# POSTGRES_PASSWORD=your-secure-database-password
# DATABASE_URL=postgres://edubridge:your-secure-database-password@db:5432/edubridge

# MySQL Database (for PythonAnywhere production)
# When DEBUG=False, these settings will be used instead of SQLite
DB_NAME=edunox$edunox_db
DB_USER=edunox
DB_PASSWORD=your-mysql-password-here
DB_HOST=edunox.mysql.pythonanywhere-services.com
DB_PORT=3306

# Alternative: Use DATABASE_URL for MySQL
# DATABASE_URL=mysql://edunox:password@edunox.mysql.pythonanywhere-services.com/edunox$edunox_db

# SQLite (development only - used automatically when DEBUG=True)
# No configuration needed - uses db.sqlite3 automatically

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache is automatically configured:
# - Development (DEBUG=True): Dummy cache
# - Production (DEBUG=False): Database cache (cache_table)

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email settings - Dynamic configuration from SiteConfiguration
# Email settings are configured through the admin dashboard, not environment variables
# Use console backend by default to prevent login errors in development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production, set EMAIL_BACKEND to SMTP and configure settings via admin dashboard:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Optional: Override default email settings (usually configured via admin dashboard)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@edunox.com
ADMIN_EMAIL=admin@edunox.com

# Field Encryption Key (Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FIELD_ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# IMAGEKIT CONFIGURATION (Media Storage)
# =============================================================================

# ImageKit CDN settings for media files
IMAGEKIT_PRIVATE_KEY=private_GUCDIbBYRlVFHVL/kEyJM0EZY9s=
IMAGEKIT_PUBLIC_KEY=public_/xl3626TiK+x0ATTk3n5A1pGdl4=
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/edunox
USE_IMAGEKIT=True

# =============================================================================
# CLOUD STORAGE (AWS S3)
# =============================================================================

# Set to True to use AWS S3 for media files
USE_S3=False

