# EduBridge Ghana Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-super-secret-key-here

# Debug mode (NEVER set to True in production)
DEBUG=False

# Site configuration
SITE_NAME=Edunox GH
SITE_URL=https://Edunox.com
ALLOWED_HOSTS=Edunox.com,www.Edunox.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_DB=edubridge
POSTGRES_USER=edubridge
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgres://edubridge:your-secure-database-password@db:5432/edubridge

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis for caching and Celery message broker
REDIS_URL=redis://redis:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend settings
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@Edunox.com
ADMIN_EMAIL=admin@Edunox.com

# Field Encryption Key (Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FIELD_ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# IMAGEKIT CONFIGURATION (Media Storage)
# =============================================================================

# ImageKit CDN settings for media files
IMAGEKIT_PRIVATE_KEY=private_GUCDIbBYRlVFHVL/kEyJM0EZY9s=
IMAGEKIT_PUBLIC_KEY=public_/xl3626TiK+x0ATTk3n5A1pGdl4=
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/edunox
USE_IMAGEKIT=True

# =============================================================================
# CLOUD STORAGE (AWS S3)
# =============================================================================

# Set to True to use AWS S3 for media files
USE_S3=False

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=Edunox-media
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# SOCIAL MEDIA
# =============================================================================

TWITTER_HANDLE=edubridgeghana
FACEBOOK_PAGE=edubridgeghana

# =============================================================================
# PAYMENT INTEGRATION (Optional)
# =============================================================================

# Paystack (popular in Ghana)
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# =============================================================================
# DEVELOPMENT SETTINGS (for local development only)
# =============================================================================

# Uncomment for local development:
# DEBUG=True
# DATABASE_URL=sqlite:///db.sqlite3
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
